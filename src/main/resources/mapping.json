{  
   "mappings":{  
      "kafka-connect":{  
         "properties":{  
            "offset":{  
               "type":"long"
            },
            "timestamp":{  
               "type":"date",
               "format":"epoch_millis"
            },
            "value":{  
               "type":"text",
               "fields":{  
                  "keyword":{  
                     "type":"keyword",
                     "ignore_above":256
                  }
               }
            }
         }
      }
   }
}